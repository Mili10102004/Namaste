<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F6F9"
    android:gravity="center"
    android:padding="24dp">

    <!-- Container for the Order Confirmation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:padding="24dp"
        android:elevation="8dp"
        android:layout_gravity="center">

        <!-- Animated GIF for Confirmation -->
        <ImageView
            android:id="@+id/order_confirmation_gif"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/order_confirmation_gif"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>

        <!-- Total Amount Display -->
        <TextView
            android:id="@+id/order_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$506.36"
            android:textSize="36sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Payment Status Message -->
        <TextView
            android:id="@+id/payment_status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your payment has been successfully completed.\nPlease check the delivery status at the Order Tracking page."
            android:textSize="16sp"
            android:textColor="#333333"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="20dp"/>

        <!-- Continue Shopping Button -->
        <Button
            android:id="@+id/continue_shopping_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue Shopping"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/custom_edittext_background"
            android:layout_marginBottom="20dp"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</LinearLayout>
