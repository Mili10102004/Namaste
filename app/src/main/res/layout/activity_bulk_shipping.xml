<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bulk Shipping Benefits"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save costs by shipping in bulk. Get discounts on large shipments and enjoy seamless shipping management."
            android:textSize="16sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:textColor="#616161"
            android:layout_marginBottom="16dp" />

        <!-- Image -->
        <ImageView
            android:id="@+id/package_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/package_image"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:contentDescription="Package Icon" />

        <!-- Pickup City -->
        <EditText
            android:id="@+id/pickup_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pickup City"
            android:background="@drawable/custom_edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>

        <!-- Address of Pick Up -->
        <EditText
            android:id="@+id/address_pickup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pickup Address Line 1"
            android:background="@drawable/custom_edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>

        <EditText
            android:id="@+id/address_pickup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pickup Address Line 2"
            android:background="@drawable/custom_edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>

        <!-- Destination City -->

        <!-- Address of Destination -->
        <EditText
            android:id="@+id/destination_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edittext_background"
            android:hint="Destination City"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>

        <EditText
            android:id="@+id/address_destination1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edittext_background"
            android:hint="Destination Address Line 1"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>

        <EditText
            android:id="@+id/address_destination2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Destination Address Line 2"
            android:background="@drawable/custom_edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>

        <!-- Add Packages Button -->
        <Button
            android:id="@+id/add_packages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Package"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9800"
            android:layout_marginBottom="16dp" />

        <!-- Package Details Title -->
        <TextView
            android:id="@+id/package_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Package Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:layout_marginBottom="8dp" />

        <!-- Recipient's Name -->
        <EditText
            android:id="@+id/recipient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Recipient's Name"
            android:background="@drawable/custom_edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>

        <!-- Weight -->

        <!-- Dimensions -->
        <EditText
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edittext_background"
            android:hint="Weight (kg)"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>

        <EditText
            android:id="@+id/dimensions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dimensions (cm)"
            android:background="@drawable/custom_edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>

        <!-- Item Type -->
        <EditText
            android:id="@+id/item_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type of Item"
            android:background="@drawable/custom_edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>

        <!-- Confirm & Ship Button -->
        <Button
            android:id="@+id/confirm_ship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Booking &amp; Ship"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
