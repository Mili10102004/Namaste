<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Individual Shipping"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ship a single package with ease. Enjoy reliable delivery services tailored for individual shipments."
            android:textSize="16sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:textColor="#616161"
            android:layout_marginBottom="16dp" />

        <!-- Image -->
        <ImageView
            android:id="@+id/package_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/package_image"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:contentDescription="Package Icon" />

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Package details"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select the approximate size of your parcel:"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Size Selection -->
        <RadioGroup
            android:id="@+id/radioGroupSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/radioSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small"
                android:buttonTint="#FF6E00"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:layout_marginLeft="16dp"
                android:buttonTint="#FF6E00"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large"
                android:layout_marginLeft="16dp"
                android:buttonTint="#FF6E00"
                android:textColor="#000000" />
        </RadioGroup>

        <!-- Item Category -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select item category"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="2"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/checkBooks"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:buttonTint="#FF6E00"
                android:text="Books, Documents"
                android:textColor="@color/black"/>

            <CheckBox
                android:id="@+id/checkClothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clothing, Accessories"
                android:buttonTint="#FF6E00"
                android:textColor="@color/black"/>


            <CheckBox
                android:id="@+id/checkElectronics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laptop, Mobiles"
                android:buttonTint="#FF6E00"
                android:textColor="@color/black"/>


            <CheckBox
                android:id="@+id/checkJewellery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other valuables"
                android:buttonTint="#FF6E00"
                android:textColor="@color/black"/>
        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Temperature Control Item"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:textStyle="bold" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="2"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/checkFood"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:buttonTint="#FF6E00"
                android:text="Food items"
                android:textColor="@color/black"/>

            <CheckBox
                android:id="@+id/checkMedicine"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:buttonTint="#FF6E00"
                android:text="Medicine"
                android:textColor="@color/black"/>
        </GridLayout>


        <!-- Footer Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">


            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:backgroundTint="#FF6E00"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
