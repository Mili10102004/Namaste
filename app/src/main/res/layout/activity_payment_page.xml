<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".PaymentPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Courier &amp; Payment"
            android:textSize="22sp"
            android:textColor="#FF5722"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Courier Service Options -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Courier Service"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/courier_options_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Courier Service Cards -->
            <androidx.cardview.widget.CardView
                android:id="@+id/courier_card_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RadioButton
                        android:id="@+id/courier_option_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blue Dart Express"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹150 - 5 Days"
                        android:textColor="#333"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/courier_card_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RadioButton
                        android:id="@+id/courier_option_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DTDC Logistics"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹100 - 8 Days"
                        android:textColor="#333"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/courier_card_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RadioButton
                        android:id="@+id/courier_option_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="India Post"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹200 - 7 Days"
                        android:textColor="#333"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RadioGroup>

        <!-- Payment Methods -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Payment Method"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginTop="16dp"/>

        <RadioGroup
            android:id="@+id/payment_methods_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/payment_method_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit/Debit Card"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/payment_method_upi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPI (Google Pay, PhonePe)"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/payment_method_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet (Paytm, Razorpay)"
                android:padding="8dp" />
        </RadioGroup>

        <!-- Confirm Order Button -->
        <Button
            android:id="@+id/confirm_order_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Confirm"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/custom_edittext_background"
            android:layout_marginBottom="20dp"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"/> <!-- Dark gray for better contrast -->
    </LinearLayout>
</ScrollView>
