<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.Namaste" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>


        <!-- Text colors -->
        <item name="android:textColor">@color/black</item>

        <!-- Custom attributes for components -->
        <item name="android:windowBackground">@color/gray_light</item>
    </style>

    <!-- Style for ListView items (optional, for better UI consistency) -->
    <style name="ListViewItemStyle">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Style for SearchView (optional, if customization needed) -->
    <style name="SearchViewStyle">
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryHint">Search FAQs...</item>
    </style>

    <style name="SpinnerStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
